{{!< layouts/layout}}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Recipe Finder</title>
    <link rel="stylesheet" href="/css/login.css"> 
</head>
<body>
    <br>
    <img src="/images/FeastFinder.png" style="height: 150px;" alt="">
    <br>
    <div class="container">
        <h1>Login</h1>
        <p style="font-size: x-small;">
            Please enter your Email here. 
        </p>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email">Email:</label>
                <input style="background-color: grey;" type="email" id="email" name="email" required>
                <br><br>
                <p style="font-size: x-small;">
                    Type you're password here. 
                </p>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input style="background-color: grey;" type="password" id="password" name="password" required>
            </div>
            <br><br>
            <button style="background-color: grey;" type="submit">Login</button>
        </form>
        <br>
        <p>Don't have an account? <a style="color: red;" href="/register">Sign up</a></p>
    </div>
</body>
