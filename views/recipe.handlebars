<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes</title>
    <link rel="stylesheet" href="/css/recipe.css">
</head>
<body>
    <h1>Recipes</h1>

    {{#each recipes}}
        <div class="recipe-card">
            <h2>{{this.recipeName}}</h2>
            <p><strong>Ingredients:</strong> {{this.ingredients}}</p>
            <p><strong>Directions:</strong> {{this.directions}}</p>
            <!-- Edit Button -->
            <form action="/recipes/{{this.id}}/edit" method="GET">
                <button type="submit">Edit</button>
            </form>
            <!-- Delete Button -->
            <form action="/recipes/{{this.id}}/delete" method="POST">
                <button type="submit">Delete</button>
            </form>
            <!-- Edit Form (hidden by default) -->
            <form class="edit-form" action="/recipes/{{this.id}}/edit" method="POST" style="display: none;">
                <label for="recipeName">Recipe Name:</label><br>
                <input type="text" id="recipeName" name="recipeName" value="{{this.recipeName}}"><br>
                <label for="ingredients">Ingredients:</label><br>
                <textarea id="ingredients" name="ingredients" rows="4" cols="50">{{this.ingredients}}</textarea><br>
                <label for="directions">Directions:</label><br>
                <textarea id="directions" name="directions" rows="4" cols="50">{{this.directions}}</textarea><br>
                <button type="submit">Save Changes</button>
            </form>
        </div>
    {{/each}}

    <!-- HTML Form -->
    <form id="addRecipeForm" action="/recipes" method="POST">
        <label for="recipeName">Recipe Name:</label><br>
        <input type="text" id="recipeName" name="recipeName" required><br>
        
        <label for="ingredients">Ingredients:</label><br>
        <textarea id="ingredients" name="ingredients" rows="4" cols="50" required></textarea><br>
        
        <label for="directions">Directions:</label><br>
        <textarea id="directions" name="directions" rows="4" cols="50" required></textarea><br>
        
        <button type="submit">Submit</button>
    </form>

    <!-- JavaScript -->
    <script src="/js/add-dish.js"></script>
    <script src="/js/edit-dish.js"></script>
    <script src="/js/search.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>






