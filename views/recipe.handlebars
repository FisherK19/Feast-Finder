<!-- views/recipe.handlebars -->

{{!< layouts/layout}}

<h1>Recipes</h1>


<form action="/recipes" method="POST">
    <label for="recipe_name">Recipe Name:</label><br>
    <input type="text" id="recipe_name" name="recipe_name"><br>
    <label for="ingredients">Ingredients:</label><br>
    <textarea id="ingredients" name="ingredients" rows="4" cols="50"></textarea><br>
    <label for="directions">Directions:</label><br>
    <textarea id="directions" name="directions" rows="4" cols="50"></textarea><br>
    <button type="submit">Submit</button>
</form>

{{#each recipes}}
    <div>
        <h3>{{recipe_name}}</h3>
        <p>Ingredients: {{ingredients}}</p>
        <p>Directions: {{directions}}</p>
    </div>
{{/each}}
