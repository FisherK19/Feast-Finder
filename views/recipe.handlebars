const express = require('express');
const router = express.Router();
const Recipe = require('../../models/recipe'); // Import your Recipe model here
const User = require('../../models/user'); // Import your User model here

// Route to render recipe details page
router.get('/:recipeId', async (req, res) => {
    try {
        const recipeId = req.params.recipeId;
        // Fetch recipe details from the database
        const recipe = await Recipe.findOne({ where: { id: recipeId } });

        if (!recipe) {
            return res.status(404).json({ message: 'Recipe not found' });
        }

        // Fetch user details who added the recipe
        const user = await User.findOne({ where: { id: recipe.userId } }); // Assuming userId is the foreign key in the Recipe model
        
        // Render the recipe details page and pass the recipe and user data to the template
        res.render('recipe', { recipe, user });
    } catch (error) {
        console.error(error);
        res.status(500).json({ message: 'Internal server error' });
    }
});

module.exports = router;
